<script type="text/javascript">
$('[id=cancelCollect]').click(function() {
	var id = $(this).parent().attr('data-id');

	var closable = alertify.dialog('confirm').setting('closable');
	//grab the dialog instance and set multiple settings at once.
	alertify.dialog('confirm')
	  .set({
		'title':'取消收藏',
	    'labels':{ok:'确定', cancel:'取消'},
	    'message': '确定要取消该收藏么？' ,
	    'onok': function(){
	    	cancelCollect(id);
		    },
	    'oncancel': function(){ alertify.error('取消操作!');}
	  }).show();
});

function cancelCollect(id) {
	$.ajax({
        type: "POST",
        url: "/user/collect/cancel",
        data: {id:id},
        dataType:'json',
        success: function(data){
            if(data.errNo==0) {
            	alertify.success('删除成功');
            	location.reload();
            }else {
            	alertify.error(data.errMsg);
            }
        	
        },
    });
}
$('[id=delCollect]').click(function() {
	var id = $(this).parent().attr('data-id');

	var closable = alertify.dialog('confirm').setting('closable');
	//grab the dialog instance and set multiple settings at once.
	alertify.dialog('confirm')
	  .set({
		'title':'删除收藏',
	    'labels':{ok:'确定', cancel:'取消'},
	    'message': '确定要删除该收藏么？' ,
	    'onok': function(){
	    	delCollect(id);
		    },
	    'oncancel': function(){ alertify.error('取消操作!');}
	  }).show();
});

function delCollect(id) {
	$.ajax({
        type: "POST",
        url: "/user/collect/delete",
        data: {id:id},
        dataType:'json',
        success: function(data){
            if(data.errNo==0) {
            	alertify.success('删除成功');
            	location.reload();
            }else {
            	alertify.error(data.errMsg);
            }
        	
        },
    });
}
</script>